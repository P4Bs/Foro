@model RegisterViewModel

<div style="display: flex; justify-content: center; align-items: center; min-height: 50vh; padding: 16px; box-sizing: border-box;" id="page-container">
    <div style="width: 100%; max-width: 400px; padding: 20px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); border-radius: 8px" id="container">
        <section>
            <div style="margin-bottom: 24px; text-align: center">
                <h1 style="margin: 0;">Registro</h1>
            </div>
        </section>
        <form asp-controller="User" asp-action="RegisterUser" method="post" style="display: flex; flex-direction: column;">
            <!-- Resumen de validación -->
            <div asp-validation-summary="ModelOnly" style="color: red; margin-bottom: 16px;"></div>

            <label asp-for="Username" style="font-weight: bold; margin-bottom: 8px;">Nombre de usuario</label>
            <input asp-for="Username" type="text" id="username" name="Username" value="@Model?.Username" placeholder="Eg: BigBoss42069" style="padding: 8px; font-size: 16px; margin-bottom: 4px" />
            <span asp-validation-for="Username" style="color: red; font-size: 14px;"></span>

            <label asp-for="Email" style="font-weight: bold; margin-top: 16px; margin-bottom: 8px;">Correo electrónico</label>
            <input asp-for="Email" type="text" id="username" name="Email" placeholder="Eg: example@example.org" style="padding: 8px; font-size: 16px; margin-bottom: 4px" />
            <span asp-validation-for="Email" style="color: red; font-size: 14px"></span>

            <label asp-for="Password" style="font-weight: bold; margin-top: 16px; margin-bottom: 8px;">Contraseña</label>
            <input asp-for="Password" type="password" id="Password" name="Password" placeholder="Contraseña" style="padding: 8px; font-size: 16px; margin-bottom: 4px;" />
            <span asp-validation-for="Password" style="color: red; font-size: 14px;"></span>

            <label asp-for="ConfirmPassword" style="font-weight: bold; margin-top: 16px; margin-bottom: 8px;">Repetir contraseña</label>
            <input asp-for="ConfirmPassword" type="password" id="ConfirmPassword" name="ConfirmPassword" placeholder="Contraseña" style="padding: 8px; font-size: 16px; margin-bottom: 4px;" />
            <span asp-validation-for="ConfirmPassword" style="color: red; font-size: 14px;"></span>

            <div style="display: flex; justify-content: center; align-items: center; height: 100px;">
                <input type="submit" value="Registrarse" style="padding: 15px; font-size: 16px; background-color: #FD5D4D; color: white; border: none; border-radius: 4px; cursor: pointer;" />
            </div>
        </form>

        <!-- Separador -->
        <div style="height: 1px; background-color: #ccc; margin: 16px 0;"></div>

        <!-- Texto adicional -->
        <div style="text-align: center; margin-bottom: 16px;">
            <p style="margin: 0; font-size: 18px; font-weight: bold;">
                ¿Ya estás registrado?
            </p>
        </div>
           
        <!-- Botón de ir a inicio de sesión-->
        <div style="display: flex; justify-content: center; align-items: center;">
            <button style="padding: 15px; font-size: 18px; background-color: white; color: #FD5D4D; border: 2px solid #FD5D4D; border-radius: 4px; cursor: pointer;" alt="Crear Nuevo Hilo" onclick="location.href='@Url.Action("Login","User")'">
                Iniciar sesión
            </button>
        </div>
    </div>
</div>
