<div id="container">
    <section style="background-color: white; padding: 26px">
        <div style="margin-bottom: 32px">
            <h1 style="margin-block-end: 0; margin-block-start: 0">Registro</h1>
        </div>
    </section>
    <div style="width: 100%; display: flex">
        <form asp-controller="User" asp-action="RegisterUser" method="post"
              style="min-width: 300px; margin-right: 30px;">
            <div style="display: flex; flex-direction: column; color: black">
                <p style="font-weight: bold">Nombre de usuario</p>
                <input type="text" id="username" name="username" placeholder="Nombre de usuario" style="color: black" />
                
                <p style="font-weight: bold">Correo electrónico</p>
                <input type="text" id="email" name="email" placeholder="example@example.com" style="color: black" />
                
                <p style="font-weight: bold; margin-top: 22px">Contraseña</p>
                <input type="password" id="password" name="password" placeholder="Introduce tu contraseña" style="color: black" />
                
                <p style="font-weight: bold; margin-top: 22px">Repetir contraseña</p>
                <input type="password" id="repeatPassword" name="repeatPassword" placeholder="Repita la contraseña" style="color: black" />
                
                <input type="submit" value="Iniciar sesión">
            </div>
        </form>
    </div>
</div>

<div>
    ¿Ya estás registrado? - <a class="nav-link text-dark" asp-controller="User" asp-action="Login">Inicia sesión</a>
</div>