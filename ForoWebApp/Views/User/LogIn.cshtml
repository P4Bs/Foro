<div id="container">
    <section style="background-color: white; padding: 26px">
        <div style="margin-bottom: 32px">
            <h1 style="margin-block-end: 0; margin-block-start: 0">Iniciar Sesión</h1>
        </div>
    </section>
    <div style="width: 100%; display: flex">
        <form asp-controller="User" asp-action="LogUser" method="post"
            style="min-width: 300px; margin-right: 30px;">
            <div style="display: flex; flex-direction: column; color: black">
                <p style="font-weight: bold">Usuario</p>
                <input type="text" id="username" name="username" placeholder="Nombre de usuario" style="color: black" />
                <p style="font-weight: bold; margin-top: 22px">Contraseña</p>
                <input type="password" id="password" name="password" placeholder="Introduce tu contraseña" style="color: black" />
                <div style="display: flex; justify-content: space-between; align-items: center; margin-top: 22px; margin-bottom: 48px">
                    <label style="font-size: 0.875rem; display: flex; align-items: center">
                        <input style="margin-right: 14px; margin-left: 0" type="checkbox" name="returncookie" id="returncookie" />
                        Recordarme
                    </label>
                </div>
                <input type="submit" value="Iniciar sesión">
            </div>
        </form>
    </div>
</div>

<div>
    ¿No estás registado? - <a class="nav-link text-dark" asp-controller="User" asp-action="Registration">Registrate</a>
</div>
